---
import Estudios from "../components/Estudios.astro";
import Proyectos from "../components/Proyectos.astro";
import SobreMi from "../components/SobreMi.astro";
import Contacto from "../components/Contacto.astro";
import Header from "../components/Header.astro";
import Intro from "../components/Intro.astro";

import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to my Portfolio.">
  <main>
    <section class="border">
      <Header />
    </section>
    <section class="">
      <Intro />
    </section>
    <section class="p-2 flex flex-col justify-center items-center md:flex-row">
      <Estudios />
    </section>
    <section class="p-2 flex flex-col justify-center items-center md:flex-row">
      <Proyectos />
    </section>
    <section class="p-2">
      <SobreMi />
    </section>
    <section class="p-2">
      <Contacto />
    </section>
  </main>
</Layout>
