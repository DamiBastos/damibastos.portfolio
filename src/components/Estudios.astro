---
import Estudio from "./Estudio.astro";

const estudios = [
  {
    academia: "HENRY",
    titulo: "Web Developer Full Stack | Javascript - React - NodeJS",
    descripcion: "Bootcamp de programación desde lógica de programación y estructura de datos, pasando por proyectos individuales y grupales con React, Nodejs, Express, Sequelize y PostgreSQL",
    url: "/diplomas/diploma_henry.pdf",
  },
  {
    academia: "CODO A CODO",
    titulo: "Programador Backend | Java - Spring Boot",
    descripcion: "Principios de programación con Java y POO, pasado por actividades individuales y proyecto grupal para listado y eliminado de registros.",
    url: "/diplomas/diploma_cac.pdf",
  },
];
---

<div id="formacion">
  <h2 class="label font-bold my-1">Formación</h2>
  <div class="flex flex-col gap-2">
    {estudios.map((estudio) => <Estudio {...estudio} />)}
  </div>
</div>

<style>
  .label {
    position: relative;
    display: inline-block;
    padding: 8px 15px;
    background-color: #B9314F;
    font-weight: bold;
    width: 7rem;
    height: 2rem;
    line-height: 1rem; /* Centra verticalmente el texto */
  }

  /* Punta en la derecha */
  .label::after {
    content: '';
    position: absolute;
    top: 0;
    right: -20px;
    width: 0;
    height: 0;
    border-top: 1rem solid transparent;
    border-bottom: 1rem solid transparent;
    border-left: 20px solid #B9314F;
  }
</style>

