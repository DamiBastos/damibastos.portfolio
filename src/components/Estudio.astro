---
interface Props {
  academia: string;
  titulo: string;
  descripcion: string;
  url: string;
}

const { academia, titulo, descripcion, url } = Astro.props;
---

<div class="flex flex-col bg-[#DEC3BE] border-2 border-[#D5A18E] rounded p-2 md:flex-row h-full">
  <!-- Columna Izquierda: ACADEMIA y TITULO -->
  <div class="w-full md:w-1/3 md:p-1 flex flex-col justify-between h-full">
    <!-- Academia -->
    <div class="w-full flex flex-col items-center flex-grow">
      <span class="text-xs">ACADEMIA</span>
      <h1 class="w-full text-center bg-[#D5A18E] font-bold p-1">{academia}</h1>
    </div>
    <!-- Título -->
    <div class="w-full flex flex-col items-center flex-grow">
      <span class="text-xs">TITULO</span>
      <h3 class="w-full text-center bg-[#D5A18E] p-1">{titulo}</h3>
    </div>
  </div>

  <!-- Columna Derecha: DESCRIPCION y LINK -->
  <div class="w-full md:w-2/3 md:p-1 flex flex-col justify-between h-full">
    <!-- Descripción -->
    <div class="w-full flex flex-col justify-around items-center flex-grow">
      <span class="text-xs">DESCRIPCION</span>
      <p class="w-full text-start bg-[#D5A18E] p-1">{descripcion}</p>
    </div>
    <!-- Link -->
    <a class="italic self-start mt-2" href={url}>certificado</a>
  </div>
</div>

<style>
  div {
    height: 100%;
  }
</style>
